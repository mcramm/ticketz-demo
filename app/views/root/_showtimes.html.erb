<%= form_tag(url_for(action: "tickets"), method: :post) do %>
  <%= select_tag("showtime_id",
                 options_for_select(showtimes.map { |showtime| [showtime.starts_at.to_fs(:showtime_full), showtime.id]}),
                 prompt: "Select a showtime",
                 onchange: "Turbo.navigator.submitForm(this.form)",
                 class: "w-[275px] bg-slate-50 text-neutral-900 dark:bg-slate-700 dark:text-neutral-100") %>
<% end %>
