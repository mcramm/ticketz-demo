<% if showtimes.empty? %>
  No showtimes to display...
<% else %>
  <%= form_tag(url_for(action: "tickets"), method: :post) do %>
    <%= select_tag "showtime_id", options_for_select(showtimes.map { |showtime| [showtime.starts_at.to_fs(:short), showtime.id]}), prompt: "Select a showtime", onchange: "Turbo.navigator.submitForm(this.form)" %>
  <% end %>
<% end %>
